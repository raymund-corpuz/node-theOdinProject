<html lang="en">
  <%- include('./partials/head.ejs') %>
  <body>
    <%- include('./partials/nav.ejs') %>

    <div>
      <h2>All Blogs</h2>

      <% if(blogs.length > 0){ %> <%blogs.forEach((blog)=>{ %>
      <h3><%= blog.title %></h3>
      <p><%= blog.snippet %></p>
      <% }) %> <% } else{ %>
      <p>No Blogs to Display</p>
      <% } %>
    </div>

    <%- include('./partials/footer.ejs') %>
  </body>
</html>

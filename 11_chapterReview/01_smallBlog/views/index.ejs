<!DOCTYPE html>
<html>
  <head>
    <title><%= title %></title>
  </head>
  <body>
    <%- include("partials/header") %>

    <h1>Posts</h1>
    <% if (posts.length === 0) { %>
    <p>No posts yet.</p>
    <% } %>

    <ul>
      <% posts.forEach(post => { %>
      <li>
        <h3><%= post.title %></h3>
        <small
          >By <%= post.authorName %> on <%= post.createdAt.toLocaleString()
          %></small
        >
        <p><%= post.body %></p>
        <hr />
      </li>
      <% }) %>
    </ul>
  </body>
</html>
